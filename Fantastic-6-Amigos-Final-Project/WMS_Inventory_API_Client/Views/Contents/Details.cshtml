@model WMS_Inventory_API_Client.Models.Content

@{
    ViewData["Title"] = "Details";
}

<h1 class="page-header">Content Details</h1>

<div>
    <h4>Content</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Container Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Container.Description)
        </dd>
        @{
            TempData["containerId"] = Html.DisplayFor(model => model.Container.Id);
            TempData["contentId"] = Html.DisplayFor(model => model.Id);
        }
    </dl>
</div>
<div>
    <a style="color: white; cursor: pointer" onClick='location.href="/Contents/Edit/"+@TempData["contentId"]'><u>Edit Contents</u></a>
    <a style="color: white; cursor: pointer" onClick='location.href="/Container/Details/"+@TempData["containerId"]'><u>Back to Container</u></a>
</div>
<br />
