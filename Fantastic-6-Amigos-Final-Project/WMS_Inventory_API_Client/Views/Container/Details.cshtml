@model WMS_Inventory_API_Client.Models.Container

@{
    ViewData["Title"] = "Details";
    TempData["accountId"] = Model.StorageLocation.AccountId;
    TempData["storageId"] = Model.StorageLocationId;
}

<h1 class="page-header">Container Details</h1>

<div id="no-more-tables">
<table class="table">
    <caption>
        Container
    </caption>
    <thead>
        <tr>
            <th>
                Location Name
            </th>
            <th>
                Type
            </th>
            <th>
                Description
            </th>
            
        </tr>
    </thead>
    <tbody>
        <tr>

            <td data-title ="Location Name">
                @Html.DisplayFor(model => model.StorageLocation.LocationName)
            </td>

            <td data-title="Type">
                @Html.DisplayFor(model => model.Type)
            </td>

            <td data-title="Description">
                @Html.DisplayFor(model => model.Description)
            </td>
            
        </tr>
    </tbody>
</table>
</div>



