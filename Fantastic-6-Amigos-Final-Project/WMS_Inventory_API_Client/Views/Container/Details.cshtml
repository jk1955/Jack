<div id="no-more-tables">
<table class="table">
    <caption>
        Container Contents
    </caption>
    <thead>
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.content)
        {
            <tr>
                <td data-title="Quantity">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td data-title="Description">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @{
                        TempData["id"] = Html.DisplayFor(modelItem => item.Id);
                     }
                        <a style="color: royalblue; cursor: pointer" onClick='location.href="/Contents/Edit/"+@TempData["id"]'><u>Edit</u></a> |
                        <a style="color: royalblue; cursor: pointer" onClick ='location.href="/Contents/Delete/"+@TempData["id"]'><u>Delete</u></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a style="color: white; cursor: pointer" onClick='location.href="/StorageLocation/Details/"+@TempData["storageId"]'><u>Back To Storage Location Detail</u></a> |
    <a style="color: white; cursor: pointer" onClick='location.href="/Container/Account/"+@TempData["accountId"]'><u>Container List</u></a> |
    <a style="color: white; cursor: pointer" onClick='location.href="/Contents/Create/"'><u>Add Contents</u></a>
</div>
